# Application
APP_NAME="AIRA - AI HR Agent"
APP_VERSION="2.0.0"
DEBUG=true
BASE_URL=http://localhost:8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./aira.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/aira

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-min-32-characters-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ElevenLabs
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_AGENT_ID=your_agent_id
ELEVENLABS_AGENT_PHONE_NUMBER_ID=your_phone_number_id
ELEVENLABS_TOOLS_API_KEY=your_tools_api_key
ELEVENLABS_WEBHOOK_SECRET=your_webhook_secret

# Azure OpenAI (for data extraction)
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4

# Azure Blob Storage (optional - for recordings)
AZURE_STORAGE_CONNECTION_STRING=your_connection_string
AZURE_STORAGE_CONTAINER_NAME=aira-recordings

# Human Agent Transfer
HUMAN_AGENT_NUMBER=+1234567890
